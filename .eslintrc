{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "plugins": [
    "react",
    "react-native"
  ],
  "rules": {
    "react/jsx-uses-vars": 2,
    "react/jsx-uses-react": 2,
    "comma-dangle": [
      "error",
      {
        "arrays": "never",
        "objects": "never"
      }
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allowAfterThis": true
      }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/forbid-prop-types": [
      1,
      {
        "forbid": [
          "object"
        ]
      }
    ]
  },
  "globals": {
    "fetch": true
  }
}
